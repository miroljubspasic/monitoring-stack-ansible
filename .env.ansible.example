# Ansible Environment Variables Template
# Copy this file to .env.ansible and configure for your environment
# These variables can be used to override defaults in the playbook

# Git Repository Configuration
MONITORING_REPO_URL=https://github.com/miroljubspasic/docker-monitoring-stack.git
MONITORING_REPO_BRANCH=main

# Server Configuration
SERVER_IP=
SERVER_USER=root
SERVER_PORT=22

# Path Configuration
PROJECT_ROOT=/opt/monitoring/projects
DOCKER_STACK_DIR=/opt/monitoring/projects/docker-stack

# Monitoring User
MONITORING_USER=monitoring

# Optional: Ansible Vault Password
# ANSIBLE_VAULT_PASSWORD_FILE=~/.ansible/vault_pass.txt
